<div class="modal fade" id="new-contest-modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Nuevo Concurso</h4>
      </div>
      <div class="modal-body">

        <%= form_for :user, url: '/users', html: { class: 'form-horizontal' } do %>
        
          <div class="form-group">
            <label for="labelnombre" class="col-lg-2 control-label">Nombre</label>
            <div class="col-lg-10">
              <input type="text" class="form-control" id="nombreContest" placeholder="Nombre" name="contest[nombre]">
            </div>
          </div>
          <div class="form-group">
            <label for="labelapellidos" class="col-lg-2 control-label">Image</label>
            <div class="col-lg-10">
              <input type="file" class="file" id="fileContest" placeholder="Image" name="contest[file]">
            </div>
          </div>
          <div class="form-group">
            <label for="labelapellidos" class="col-lg-2 control-label">Url</label>
            <div class="col-lg-10">
              <input type="text" class="form-control" id="urlContest" placeholder="Url" name="contest[url]">
            </div>
          </div>
          <div class="form-group">
            <label for="labelemail" class="col-lg-2 control-label">Fecha Inicio</label>
            <div class="col-lg-10">
              <input type="text" id="datepickerinicio" class="form-control" placeholder="Fecha Inicio" name="contest[fechainicial]">
            </div>
          </div>
          <div class="form-group">
            <label for="labelemail" class="col-lg-2 control-label">Fecha Fin</label>
            <div class="col-lg-10">
              <input type="text" id="datepickerfin" class="form-control" placeholder="Fecha Fin" name="contest[fechafin]">
            </div>
          </div>
          <div class="form-group">
            <label for="labelnombre" class="col-lg-2 control-label">Descripcion Premio</label>
            <div class="col-lg-10">
              <input type="text" class="form-control" id="descPremioContest" placeholder="Descripcion Premio" name="contest[premio]">
            </div>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Salir</button>
            <button type="submit" class="btn btn-primary">Crear</button>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</div>