<div class="modal fade" id="sigin_form" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Ingresar</h4>
      </div>
      <div class="modal-body">

        <%= form_for :auth, url: '/auth', html: { class: 'form-horizontal' } do %>

          <div class="form-group">
            <label for="labelemail" class="col-lg-2 control-label">Email</label>
            <div class="col-lg-10">
              <input type="email" class="form-control" id="siginemail" placeholder="Email" name="user[email]">
            </div>
          </div>
          
          <div class="form-group">
            <label for="labelcontraseña" class="col-lg-2 control-label">Contraseña</label>
            <div class="col-lg-10">
              <input type="password" class="form-control" id="siginpassword" placeholder="Contraseña" name="user[password]">
            </div>
          </div>

          <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Ingresar</button>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</div>